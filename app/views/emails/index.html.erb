<p id="notice"><%= notice %></p>

<h1>Emails</h1>

<% @emails.each do |email| %>
  <p>
    <%= email.created_at %>: 
    <%= email.subject %>
    
  </p>
  <ul>
    <% email.links.each do |link| %>
      <li> 
        <a href="<%= link.url %>"> <%= link.title %> </a> - <%= link.description %>
      </li>
    <% end %>
  </ul>
<% end %>
